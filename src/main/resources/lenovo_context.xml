<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true"
>

    <import resource="mac_context.xml"/>
    <import resource="samsung_context.xml"/>

    <bean id="lenovo" class="org.bl.spring.impls.notebook.Lenovo" >
        <constructor-arg ref="macProcessor" index="0"/>
        <constructor-arg ref="samsungVideo" index="1"/>
        <constructor-arg ref="macHdd" index="2"/>
    </bean>

    <bean id="baseModel" class="org.bl.spring.impls.notebook.Lenovo" >
        <constructor-arg ref="macProcessor" index="0"/>
        <constructor-arg ref="macVideo" index="1"/>
        <constructor-arg ref="macHdd" index="2"/>
    </bean>

</beans>
